<%= form_with(model: @role, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :movie_id %>

    <%= f.collection_select :movie_id, Movie.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :actor_id %>

    <%= f.collection_select :actor_id, Actor.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :director_id, value: @director.id %>

  <%= f.submit "Create role", class: "btn btn-block btn-outline-secondary" %>
<% end %>
